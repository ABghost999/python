firstname= input("Enter your name here:  ")

age = int(input("How old are you: "))
yearsto100 = 100 - age
#print("Hello {} in {} years you will be 100 years old".format(firstname, yearsto100)) # format
print(f"hello {firstname} in {yearsto100} years you will be 100") #f-string formatting

lastname = input("what is your last name: ")
initials = firstname[0] + lastname[0]
print(initials)
